<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@android:color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

    <CheckBox
        android:id="@+id/movement_cb"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="60dp"
        android:checked="true"
        android:fontFamily="@font/custom_font"
        android:text="Bewegung"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/drink_cb"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="101dp"
        android:checked="true"
        android:fontFamily="@font/custom_font"
        android:text="Trinken"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/posture_cb"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="100dp"
        android:checked="true"
        android:fontFamily="@font/custom_font"
        android:text="Haltung"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_notes"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/custom_font"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="210dp"
        android:backgroundTint="#66FF99"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_notes2"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="165dp"
        android:backgroundTint="#66FF99"
        android:fontFamily="@font/custom_font"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/edit_notes3"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="255dp"
        android:backgroundTint="#66FF99"
        android:ems="10"
        android:fontFamily="@font/custom_font"
        android:inputType="textPersonName"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_notes4"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/custom_font"
        android:backgroundTint="#66FF99"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_notes5"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#66FF99"
        android:fontFamily="@font/custom_font"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="311dp"
        android:text="My Goals"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:fontFamily="@font/custom_font"
        android:textStyle="bold"/>

    <View
        android:layout_width="340dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="300dp"
        android:background="#66FF99" />


</RelativeLayout>